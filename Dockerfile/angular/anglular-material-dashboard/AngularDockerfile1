# Use a Node.js 18 base image
FROM node:18 AS build

# Set the working directory
WORKDIR /app

# Copy package.json and package-lock.json
COPY package*.json ./

# Install dependencies
RUN npm install

# Install Angular CLI
RUN npm install -g @angular/cli

# Create a new Angular project
RUN ng new my-angular-app --skip-install --skip-tests

# Copy the source code
COPY . /app/my-angular-app

# Install Angular project dependencies
WORKDIR /app/my-angular-app
RUN npm install

# Build the Angular application
RUN ng build --configuration production

# Use a lightweight Nginx base image for the final stage
FROM nginx:1.19-alpine

# Copy the built Angular application from the previous stage
COPY --from=build /app/my-angular-app/dist/my-angular-app /usr/share/nginx/html

# Expose the port that Nginx will listen on
EXPOSE 80

# Start Nginx
CMD ["nginx", "-g", "daemon off;"]
